@using FinancialTips.Client.Components

<EditForm Model="@instrument" OnValidSubmit="@OnValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <fieldset disabled="@Disabled">
        <div class="form-group">

            <div class="form-group">

                <label>Instrument Name</label>
                <div>
                    <InputText @bind-Value="instrument.InstrumentName" class="form-control" />
                    <ValidationMessage For="@(()=> instrument.InstrumentName)" />
                </div>
            </div>

        </div>

        <div class="form-group">

            <div class="form-group">

                <label>Instrument Description</label>
                <div>
                    <InputText @bind-Value="instrument.InstrumentDescription" class="form-control" />
                    <ValidationMessage For="@(()=> instrument.InstrumentDescription)" />
                </div>
            </div>

        </div>

        <button type="submit" class="btn btn-success btn-block">
            @ButtonText
        </button>

    </fieldset>

        @if (!Disabled)
        {
            <button type="submit" class="btn btn-success btn-block">
                @ButtonText
            </button>
        }

        <BackToList Target="instruments" />
</EditForm>

@code {


    [Parameter] public bool Disabled { get; set; } = false;
    [Parameter] public Instrument instrument { get; set; }
    [Parameter] public string ButtonText { get; set; } = "Save";
    [Parameter] public EventCallback OnValidSubmit { get; set; }


}
